{
    "configurations": [
        {
            "cwd": "${workspaceFolder}",
            "executable":"${workspaceFolder}/build/zephyr/zephyr.elf",
            "name": "Debug with JLink",
            "request": "launch",
            "type": "cortex-debug",
            "device": "nrf52",
            "interface":"swd",
            "runToEntryPoint": "main",
            "showDevDebugOutput": "raw",
            "servertype": "jlink",
            "serverpath": "/opt/SEGGER/JLink/JLinkGDBServerCLExe"
        },
        {
            "name": "Debug with STLink",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/zephyr/zephyr.elf",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "showDevDebugOutput": "raw",
            "servertype": "stlink",
            "stlinkPath": "/opt/st/stm32cubeclt/STLink-gdb-server/bin/ST-LINK_gdbserver",
            "stm32cubeprogrammer": "/opt/st/stm32cubeclt/STM32CubeProgrammer/bin",
            "svdFile": "/opt/st/stm32cubeclt/STMicroelectronics_CMSIS_SVD/STM32L476.svd"
        }
    ]
}