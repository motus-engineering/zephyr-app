{
    "configurations": [
        {
            "name": "Renode Debug",
            "showDevDebugOutput": "raw",
            "executable": "${workspaceFolder}/build/zephyr/zephyr.elf",
            "cwd": "${workspaceFolder}", 
            "type": "cortex-debug",
            "request": "attach",
            "servertype": "external",
            "gdbTarget": "localhost:3333",
            "gdbPath": "/usr/bin/gdb-multiarch",
            "postAttachCommands": [
                "-break-insert -t --function main",
                "monitor reset",
                "monitor start"                
            ],
        },
        {
            "name": "Debug with STLink",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/zephyr/zephyr.elf",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "showDevDebugOutput": "raw",
            "servertype": "stlink",
            "stlinkPath": "/opt/st/stm32cubeclt/STLink-gdb-server/bin/ST-LINK_gdbserver",
            "stm32cubeprogrammer": "/opt/st/stm32cubeclt/STM32CubeProgrammer/bin",
            "svdFile": "/opt/st/stm32cubeclt/STMicroelectronics_CMSIS_SVD/STM32L476.svd"
        }
    ]
}